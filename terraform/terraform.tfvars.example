# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]

# RDS Configuration
db_instance_class    = "db.t3.small"
db_allocated_storage = 50
db_name              = "llmops"
db_username          = "postgres"
db_password          = "YourSecurePassword123!"  # Change this!
enable_multi_az      = true
backup_retention_days = 7

# ECR Configuration
ecr_repository_name = "llmops-system"
image_tag_mutability = "MUTABLE"
scan_on_push        = true
image_retention_count = 10

# ECS Configuration
ecs_cluster_name   = "llmops-cluster"
container_name     = "llmops-app"
container_port     = 3000
container_cpu      = 512
container_memory   = 1024
desired_count      = 2
ecr_image_tag      = "latest"
ecs_min_capacity   = 2
ecs_max_capacity   = 6
cpu_target_percentage = 70
memory_target_percentage = 80

# S3 Configuration
s3_bucket_name         = "llmops-assets-prod"
enable_s3_versioning   = true
enable_s3_encryption   = true
block_public_access    = true

# CloudFront Configuration
enable_waf           = false
acm_certificate_arn  = ""  # Add your ACM certificate ARN if using custom domain
domain_name          = ""  # Add your custom domain if available

# Monitoring Configuration
alarm_email              = "your-email@example.com"  # Change this!
alarm_cpu_threshold      = 80
alarm_memory_threshold   = 90

# Application Configuration
app_environment_vars = {
  NODE_ENV                    = "production"
  VITE_APP_TITLE              = "LLMOps System"
  VITE_APP_LOGO               = "/logo.svg"
  OAUTH_SERVER_URL            = "https://api.manus.im"
  VITE_OAUTH_PORTAL_URL       = "https://portal.manus.im"
  BUILT_IN_FORGE_API_URL      = "https://api.manus.im"
  VITE_FRONTEND_FORGE_API_URL = "https://api.manus.im"
}
